<tr id="approve-<%= request.id%>">
  <th scope="row">    
    <div class="media align-items-center">
      <div class="media-body">
        <span class="name mb-0 text-sm"><%= request.user.name %></span>
      </div>
    </div>
  </th>
  <th scope="row">    
    <div class="media align-items-center">
      <div class="media-body">
        <span class="name mb-0 text-sm"><%= request.item.name %></span>
      </div>
    </div>
  </th>
  <td class="budget">
    <%= request.item.price %> $
  </td>
  <td class="budget">
    <%= request.reason %>
  </td>
  <td>
    <span class="badge badge-dot mr-4">
      <i class="bg-warning"></i>
      <span class="status"><%= request.status %></span>
    </span>
  </td>
  <td>
    <div class="d-flex align-items-center">
      <span class="completion mr-2"><%= request.type_request %></span>
    </div>
  </td>
  <td>
    <div class="d-flex align-items-center">
      <span class="completion mr-2"><%= request.note %></span>
    </div>
  </td> 
  <td class="budget">
    <%= link_to 'Approve',admin_requests_path(:approve => { :type_deliver => request.type_request, 
                                                            :start_date => request.start_date,
                                                            :end_date => request.end_date,
                                                            :reason => request.reason,
                                                            :request_id => request.id,
                                                            :item_id => request.item.id
                                                          }), method: :post, data: { confirm: 'You sure?' },  :class => "btn btn-primary"%>
    <%= link_to 'Reject', edit_admin_request_path(request.id),  :class => "btn btn-info btn-primary"%>
  </td>
</tr>
