  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="heade_create">
            <p>Create item</p>
          </div>
          <% if @item.errors.any? %>
            <ul class = 'item_errors'>
              <% @item.errors.full_messages.each do |message| %>
                <li class = 'errors'><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <div class="card-body px-lg-5 py-lg-5 card_item">
            <%= form_with(model: @item, url: manager_items_path, local: true) do |f| %>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <%= f.label :name, :class => "lable"%><br />
                    <%= f.text_field :name, :class => "filed_select" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :status, :class => "lable"%><br />
                    <%= f.select :status,  ['broken'], {}, { :class => 'filed_select' } %>
                  </div>

                  <div class="form-group">
                    <%= f.label :price, :class => "lable"%><br />
                    <%= f.text_field :price, :class => "filed_select" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :comment, :class => "lable"%><br />
                    <%= f.text_field :comment, :class => "filed_select" %>
                  </div>

                </div>
                <div class="col-lg-6">
                  <%= f.fields :detail, model: f.object.detail do |ff| %>
                    <% Item::DETAIL_ATTRIBUTES.each do |attribute|%>
                      <div class="form-group">
                        <%= ff.label attribute, :class => "lable"%><br />
                        <%= ff.text_field attribute, :class =>  "filed_select" %>
                      </div> 
                    <%end%>
                  <%end%>
                </div>
              </div>
              <div class="form-group btn_submit">
                <%= link_to "Back", manager_items_path, :class => "btn btn-info btn-primary" %>
                <%= f.submit "Submit", class: "btn btn-primary" %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
